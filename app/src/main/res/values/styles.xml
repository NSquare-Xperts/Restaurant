<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/orange_light</item>
        <item name="buttonTint">@color/orange_light</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">16dp</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
        <item name="android:listDivider">@drawable/separator_drawer</item>
        <!--<item name="android:activatedBackgroundIndicator">@drawable/selector_drawer_item</item>-->
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratting_image</item>
        <item name="android:minHeight">40px</item>
        <item name="android:maxHeight">40px</item>
    </style>

    <style name="foodRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratting_image_big</item>
        <item name="android:minHeight">90px</item>
        <item name="android:maxHeight">90px</item>
    </style>

    <style name="foodRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratting_image_small</item>
        <item name="android:minHeight">30px</item>
        <item name="android:maxHeight">30px</item>
    </style>

    <style name="PPBaseTheme" parent="AppTheme">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <style name="CameraButtonStyle">
        <item name="android:layout_width">@dimen/fab_size</item>
        <item name="android:layout_height">@dimen/fab_size</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:contentDescription">@string/imageview_capture_photo_content_description</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>
</resources>
