<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <com.nsquare.restaurant.util.RobotoRegular.TextViewRoboto
                    android:id="@+id/textView_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center|left"
                    android:padding="5dp"
                    android:text="@string/remove_item_from_cart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp">

                <RelativeLayout
                    android:id="@+id/relative_layout_see_all_prate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <com.nsquare.restaurant.util.RobotoMedium.ButtonTextRoboto
                        android:id="@+id/button_popup_no"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:text="No"
                        android:background="@color/black"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_layout_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:gravity="center">

                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/buymyrequirement_button_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.nsquare.restaurant.util.RobotoMedium.ButtonTextRoboto
                        android:id="@+id/button_popup_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textAllCaps="false"
                        android:text="Yes"
                        android:textColor="@color/white"
                        android:background="@color/green_light"
                        android:textSize="14sp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
