<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_list_order">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                    android:id="@+id/list_item_tables_table_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order id - 3435658745"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:drawableLeft="@drawable/order_history_icn"
                    android:drawablePadding="8dp"/>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/seperator_line"></View>
</LinearLayout>