<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/activity_edit_profile_imageview_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile_pic"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_profile_pic_icn"
                android:layout_alignRight="@id/activity_edit_profile_imageview_profile_image"
                android:layout_alignBottom="@id/activity_edit_profile_imageview_profile_image"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"/>
        </RelativeLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            android:id="@+id/activiity_login_textinputlayout_name"
            android:layout_marginTop="15dp">

            <com.nsquare.restaurant.util.RobotoLight.EditTextRoboto
                android:id="@+id/activity_signup_edittext_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:textSize="15dp"
                android:inputType="text"
                android:textColorHint="@color/white"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:background="@drawable/edit_text_inactive"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:digits="@string/alphabet"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activiity_login_textinputlayout_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <com.nsquare.restaurant.util.RobotoLight.EditTextRoboto
                android:id="@+id/activity_signup_edittext_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_birth"
                android:textSize="15dp"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:background="@drawable/edit_text_inactive"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            android:id="@+id/activiity_login_textinputlayout_mobileno"
            android:layout_marginTop="20dp">

            <com.nsquare.restaurant.util.RobotoLight.EditTextRoboto
                android:id="@+id/activity_signup_edittext_mobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobileno"
                android:textSize="15dp"
                android:maxLength="10"
                android:inputType="number"
                android:textColorHint="@color/white"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:background="@drawable/edit_text_inactive"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <com.nsquare.restaurant.util.RobotoRegular.ButtonTextRoboto
        android:id="@+id/activity_view_profile_button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_submit"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/selector_button_login"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>