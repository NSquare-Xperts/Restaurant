<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/booking_mobile_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearlayout_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="end">

            <com.nsquare.restaurant.util.RobotoMedium.TextViewRoboto
                android:id="@+id/list_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:gravity="end"
                android:visibility="visible"
                android:layout_gravity="end"
                android:background="@color/orange"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/list_item_selected_cart_menus_imageview_close_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@drawable/ic_action_clear" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.nsquare.restaurant.util.SquareImageView
                android:id="@+id/list_item_veg_menu_list_imageview_profile_pic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cuisine_photo_one" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/list_item_veg_menu_list_imageview_profile_pic"
                android:orientation="vertical">

                <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                    android:id="@+id/list_item_veg_menu_list_textview_menu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="Streak Cafe"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/list_item_selected_cart_menus_imageview_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_clear" />

            <com.nsquare.restaurant.util.RobotoMedium.TextViewRoboto
                android:id="@+id/list_item_status_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:gravity="end"
                android:visibility="gone"
                android:layout_gravity="end"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:background="@color/orange"
                android:textColor="@color/white"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:id="@+id/list_item_veg_menu_list_linearlayout_common_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/list_item_veg_menu_list_linearlayout_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/layout_bg"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/list_item_veg_menu_list_imageview_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/minus_icn"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:clickable="false"
                        android:visibility="visible" />

                    <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                        android:id="@+id/list_item_veg_menu_list_textview_quantity"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/list_item_veg_menu_list_imageview_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus_icn"
                        android:textColor="@color/white"
                        android:clickable="false"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>


            <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                android:id="@+id/list_item_selected_cart_menus_textview_multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/list_item_veg_menu_list_linearlayout_common_view"/>

            <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                android:id="@+id/list_item_veg_menu_list_textview_menu_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/list_item_selected_cart_menus_textview_multiply"
                android:layout_marginLeft="5dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/Rs"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"/>

                <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                    android:id="@+id/list_item_veg_menu_list_textview_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>