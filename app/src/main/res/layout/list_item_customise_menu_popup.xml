<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_layout_type_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                android:id="@+id/textview_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radio_grp_select"
                android:layout_below="@+id/textview_label"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/relative_layout_type_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                android:id="@+id/textview_label_chk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.nsquare.restaurant.util.RobotoRegular.CheckBoxTextRoboto
                android:id="@+id/checkbox_select_multiple_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="visible"
                android:textSize="15sp"
                android:layout_below="@+id/textview_label_chk"
                android:textColor="@color/grey_title"
                android:buttonTint="@color/grey_title"
                android:gravity="center" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>