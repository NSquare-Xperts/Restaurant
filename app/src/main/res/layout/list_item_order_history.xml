<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_list_order">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                    android:id="@+id/list_item_order_history_textview_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order id - 3435658745"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:drawableLeft="@drawable/order_history_icn"
                    android:drawablePadding="8dp"/>

                <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                    android:id="@+id/list_item_order_history_textview_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill - \u20B9 500"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                    android:id="@+id/list_item_order_history_textview_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:background="@drawable/selector_button_cancel"/>

                <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                    android:id="@+id/list_item_order_history_textview_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Just Now"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/seperator_line"></View>
</LinearLayout>