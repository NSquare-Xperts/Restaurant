<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearlayout_veg_menu_list_item"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adapter_vegmenu_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/booking_mobile_bg"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selected_quantity"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/yellow_dark"
                android:layout_marginRight="1dp"
                android:layout_alignParentRight="true" />

            <com.nsquare.restaurant.util.SquareImageView
                android:id="@+id/list_item_veg_menu_list_imageview_profile_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cuisine_photo_one" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/list_item_veg_menu_list_imageview_profile_pic"
                android:orientation="vertical">

                <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                    android:id="@+id/list_item_veg_menu_list_textview_menu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:text="Streak Cafe"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                    android:id="@+id/list_item_veg_menu_list_textview_menu_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="Streak Cafe"
                    android:textColor="@color/white"
                    android:textSize="13dp" />


                <com.nsquare.restaurant.util.RobotoLight.TextViewRoboto
                    android:id="@+id/list_item_veg_menu_list_textview_customize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:text="@string/customization_available"
                    android:textColor="@color/yellow_dark"
                    android:textSize="10dp" />

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/review_separator" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nsquare.restaurant.util.RobotoBold.TextViewRoboto
                android:id="@+id/list_item_veg_menu_list_textview_menu_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lorem Ipsum is simply dummy."
                android:textColor="@color/white"
                android:textSize="13dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>